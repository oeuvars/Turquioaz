{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["esnext"],
        "esModuleInterop": true,
        "target": "ES2022",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "../*": ["src/*"]
        },
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*", "src/config/db.config.ts"],
    "exclude": ["node_modules"]
}
